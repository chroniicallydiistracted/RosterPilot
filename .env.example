# RosterPilot local development environment variables
# Copy to .env and adjust secrets before running services.

# --- Global ---
APP_ENV=development
LOG_LEVEL=INFO
TZ=America/Phoenix

API_BASE_URL=http://localhost:8000
APP_BASE_URL=http://localhost:3000
CORS_ALLOWED_ORIGINS=http://localhost:3000

# --- Backend (FastAPI) ---
DATABASE_URL=postgres://postgres:postgres@localhost:5432/rosterpilot
REDIS_URL=redis://localhost:6379/0

YAHOO_CLIENT_ID=
YAHOO_CLIENT_SECRET=
YAHOO_REDIRECT_URI=http://localhost:8000/oauth/callback
YAHOO_SCOPE=fspt-r

SESSION_SECRET=change-me-32-bytes-min
TOKEN_ENC_KEY=base64-encoded-key
COOKIE_DOMAIN=localhost
COOKIE_SECURE=false

CACHE_TTL_DEFAULT=300
RATE_LIMIT_WINDOW=60
RATE_LIMIT_MAX=120
WS_HEARTBEAT_SEC=25

FEATURE_WEATHER=false
FEATURE_REPLAY=true

OTEL_EXPORTER_OTLP_ENDPOINT=
OTEL_EXPORTER_OTLP_HEADERS=
SENTRY_DSN=

# --- Frontend (Next.js) ---
NEXT_PUBLIC_API_URL=http://localhost:8000
NEXT_PUBLIC_WS_URL=ws://localhost:8000/ws
NEXT_PUBLIC_ENV=development
