# RosterPilot local development environment variables
# Copy to .env and adjust secrets before running services.

# --- Global ---
APP_ENV=development
LOG_LEVEL=INFO
TZ=America/Phoenix

API_BASE_URL=
APP_BASE_URL=
CORS_ALLOWED_ORIGINS=

# --- Backend (FastAPI) ---
DATABASE_URL=
REDIS_URL=

YAHOO_CLIENT_ID=
YAHOO_CLIENT_SECRET=
YAHOO_REDIRECT_URI=
YAHOO_SCOPE=fspt-r

SESSION_SECRET=change-me-32-bytes-min
TOKEN_ENC_KEY=base64-encoded-key
